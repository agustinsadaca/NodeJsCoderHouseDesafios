
<table class="u-full-width">
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Price</th>
      <th>Thumbnail</th>
    </tr>
  </thead>
  {{#each productos}}
  <tbody>
  <tr>
    <td><p>{{this.id}}</p></td>
    <td> <p> {{this.producto.title}}</p></td>
    <td> <p>{{this.producto.price}}</p></td>
    <td><img class="imagen" src="{{this.producto.thumbnail}}"></td>
  </tr>
  </tbody>
  {{/each}}
</table>
<style>
.imagen{width:10%}
table{
  margin: 20px;
  
}
</style>